{
  "name": "getir2",
  "private": true,
  "workspaces": ["apps/ops-web", "services/*", "packages/*"],
  "scripts": {
    "dev": "concurrently \"npm --workspace services/api run dev\" \"npm --workspace services/worker run dev\" \"npm --workspace apps/ops-web run dev -- -p 3001\"",
    "dev:api": "npm --workspace services/api run dev",
    "dev:worker": "npm --workspace services/worker run dev",
    "dev:web": "npm --workspace apps/ops-web run dev -- -p 3001"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "overrides": {
    "ioredis": "5.9.2"
  }
}
